{
  "name": "mean-full-stack",
  "version": "7.2.1",
  "license": "MIT",
  "author": "Pierre Raoul",
  "description": "MEAN Full Stack project built using Angular 2+, Express, Mongoose and Node.",
  "engines": {
    "node": "8.11.1",
    "npm": "6.4.0"
  },
  "scripts": {
    "ng": "ng",
    "build": "ng build --prod --stats-json",
    "start": "npm run server:dev:start",
    "mongo:clear": "rimraf .private/data/db/*",
    "build:clear": "rimraf dist/*",
    "premongo:start": "mkdirp .private/data/db",
    "mongo:start": "ts-node ./scripts/from-env/from-env-cli.ts mongod --dbpath .private/data/db --port '$mongodb.port'",
    "preclient:start": "ts-node ./scripts/api-proxy/setNgProxyConf.ts",
    "client:start": "ng serve",
    "server:build": "tsc -p server",
    "server:build:watch": "tsc -w -p server",
    "server:dev": "node --inspect=5858 -r ts-node/register ./server/app.ts",
    "server:dev:start": "nodemon",
    "dev": "concurrently -n \"proxy,server\" -c \"green.bold,yellow.bold\" \"npm run client:start\" \"npm run server:dev:start\"",
    "dev:start": "concurrently -n \"mongo,app\" -c \"blue.bold,white.bold\" \"npm run mongo:start\" \"npm run dev\"",
    "client:prod:build": "ng build --aot --prod --stats-json",
    "preserver:prod:start": "npm run client:prod:build",
    "server:prod:start": "npm run server:build & node dist/server/app.js",
    "stage:start": "concurrently -n \"mongo,server\" -c \"blue.bold,yellow.bold\" \"npm run mongo:start\" \"npm run server:prod:start\"",
    "test": "concurrently -n \"server,client\" -c \"yellow.bold,green.bold\" \"npm run mongo:waiton & npm run server:test\" \"npm run client:test\"",
    "test:start": "concurrently -n \"mongo,app\" -c \"blue.bold,white.bold\" \"npm run mongo:start\" \"npm run test\"",
    "mongo:waiton": "ts-node ./scripts/waiton-mongo/waiton-mongo-cli.ts",
    "client:test": "ng test",
    "client:test:start": "concurrently -n \"mongo,client\" -c \"blue.bold,green.bold\" \"npm run mongo:start\" \"npm run mongo:waiton & npm run client:test\"",
    "preserver:test": "npm run server:build",
    "server:test": "cross-env NODE_ENV=test mocha dist/server/test --exit",
    "server:test:start": "concurrently -n \"mongo,server\" -c \"blue.bold,yellow.bold\" \"npm run mongo:start\" \"npm run mongo:waiton & npm run server:test\"",
    "lint": "concurrently -n \"client,server\" -c \"green.bold,yellow.bold\" \"npm run client:lint\" \"npm run server:lint\"",
    "client:lint": "ng lint",
    "html:lint": "htmlhint \"client/**/*.html\"",
    "scss:lint": "sass-lint \"client/**/*.scss\" -v",
    "server:lint": "tslint --project server/tsconfig.json --config tslint.json server/**/**.ts{,x} & echo-cli 'All lint rules checked with success'",
    "pree2e:start": "tsc -p e2e",
    "e2e:start": "ng e2e",
    "bundle-report-es5": "webpack-bundle-analyzer dist/public/stats-es5.json",
    "bundle-report-es6": "webpack-bundle-analyzer dist/public/stats-es2015.json -p 8889",
    "postinstall": "npm run fonts:install",
    "prefonts:install": "mkdirp ./client/stylesheets",
    "fonts:install": "concurrently \"npm run raleway-fonts:install\" \"npm run lato-fonts:install\"",
    "raleway-fonts:install": "goog-webfont-dl -a -d ./client/assets/fonts/raleway -p '../fonts/raleway' -o ./client/stylesheets/raleway-fonts.css -y 400,300,600,700,900 Raleway",
    "lato-fonts:install": "goog-webfont-dl -a -d ./client/assets/fonts/lato -p '../fonts/lato' -o ./client/stylesheets/lato-fonts.css -y 400,700,900,300 Lato"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "~8.0.0",
    "@angular/common": "~8.0.0",
    "@angular/compiler": "~8.0.0",
    "@angular/core": "~8.0.0",
    "@angular/forms": "~8.0.0",
    "@angular/platform-browser": "~8.0.0",
    "@angular/platform-browser-dynamic": "~8.0.0",
    "@angular/router": "~8.0.0",
    "@auth0/angular-jwt": "^2.1.0",
    "@hapi/joi": "^15.0.3",
    "@ng-bootstrap/ng-bootstrap": "^4.2.0",
    "bcryptjs": "^2.4.3",
    "bootstrap": "^4.3.1",
    "core-js": "^3.1.3",
    "dotenv": "^8.0.0",
    "express": "^4.17.1",
    "font-awesome": "^4.7.0",
    "jsonwebtoken": "^8.5.1",
    "lodash": "^4.17.11",
    "mongoose": "^5.5.12",
    "morgan": "^1.9.1",
    "rxjs": "^6.5.2",
    "tslib": "^1.9.3",
    "zone.js": "~0.9.1"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "~0.800.0",
    "@angular/cli": "~8.0.1",
    "@angular/compiler-cli": "~8.0.0",
    "@angular/language-service": "~8.0.0",
    "@types/bcryptjs": "^2.4.2",
    "@types/chai-http": "^4.2.0",
    "@types/cross-spawn": "^6.0.0",
    "@types/dotenv": "^6.1.1",
    "@types/express": "^4.16.1",
    "@types/hapi__joi": "^15.0.1",
    "@types/jasmine": "^3.3.13",
    "@types/jasminewd2": "~2.0.6",
    "@types/jsonwebtoken": "^8.3.2",
    "@types/lodash": "^4.14.133",
    "@types/mocha": "^5.2.7",
    "@types/mongoose": "^5.5.3",
    "@types/morgan": "^1.7.35",
    "@types/node": "^12.0.4",
    "chai": "^4.2.0",
    "chai-http": "^4.3.0",
    "codelyzer": "^5.0.1",
    "concurrently": "^4.1.0",
    "cpy": "^7.2.0",
    "cross-env": "^5.2.0",
    "echo-cli": "^1.0.8",
    "goog-webfont-dl": "^1.0.2",
    "htmlhint": "^0.11.0",
    "jasmine-core": "^3.4.0",
    "jasmine-spec-reporter": "^4.2.1",
    "karma": "^4.1.0",
    "karma-chrome-launcher": "^2.2.0",
    "karma-coverage-istanbul-reporter": "^2.0.5",
    "karma-jasmine": "^2.0.1",
    "karma-jasmine-html-reporter": "^1.4.2",
    "mkdirp": "^0.5.1",
    "mocha": "^6.1.4",
    "node-sass": "^4.12.0",
    "nodemon": "^1.19.1",
    "protractor": "^5.4.2",
    "request": "^2.88.0",
    "rimraf": "^2.6.3",
    "sass-lint": "^1.13.1",
    "ts-node": "^8.2.0",
    "tslint": "^5.17.0",
    "tslint-config-prettier": "^1.18.0",
    "typescript": ">=3.4 <3.5",
    "webpack-bundle-analyzer": "^3.3.2"
  }
}
