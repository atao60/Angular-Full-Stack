{
  "name": "mean-full-stack",
  "version": "7.2.1",
  "license": "MIT",
  "author": "Pierre Raoul",
  "description": "MEAN Full Stack project built using Angular 2+, Express, Mongoose and Node.",
  "engines": {
    "node": "8.11.1",
    "npm": "6.4.0"
  },
  "scripts": {
    "ng": "ng",
    "build": "ng build --prod",
    "start": "npm run server:dev:start",
    "mongo:clear": "rimraf .private/data/db/*",
    "mongo:start": "mongod --dbpath='.private/data/db' --port=3001",
    "client:start": "ng serve --proxy-config proxy.conf.json",
    "server:build": "tsc -p server",
    "server:build:watch": "tsc -w -p server",
    "server:dev": "node --inspect=5858 -r ts-node/register ./server/app.ts",
    "server:dev:start": "nodemon",
    "dev": "concurrently -n \"proxy,server\" -c \"green.bold,yellow.bold\" \"npm run client:start\" \"npm run server:dev:start\"",
    "dev:start": "concurrently -n \"mongo,app\" -c \"blue.bold,white.bold\" \"npm run mongo:start\" \"npm run dev\"",
    "client:prod:build": "ng build --aot --prod",
    "preserver:prod:start": "npm run client:prod:build",
    "server:prod:start": "npm run server:build && node dist/server/app.js",
    "stage:start": "concurrently -n \"mongo,server\" -c \"blue.bold,yellow.bold\" \"npm run mongo:start\" \"npm run server:prod:start\"",
    "test": "concurrently -n \"server,client\" -c \"yellow.bold,green.bold\" \"npm run mongo:waiton && npm run server:test\" \"npm run client:test\"",
    "test:start": "concurrently -n \"mongo,app\" -c \"blue.bold,white.bold\" \"npm run mongo:start\" \"npm run test\"",
    "mongo:waiton": "ts-node ./scripts/waiton-mongo/waiton-mongo-cli.ts mongodb://localhost:3001/angularfullstack",
    "client:test": "ng test",
    "client:test:start": "concurrently -n \"mongo,client\" -c \"blue.bold,green.bold\" \"npm run mongo:start\" \"npm run mongo:waiton && npm run client:test\"",
    "server:test": "tsc -p server/tsconfig.json && mocha dist/server/test --exit",
    "server:test:start": "concurrently -n \"mongo,server\" -c \"blue.bold,yellow.bold\" \"npm run mongo:start\" \"npm run mongo:waiton && npm run server:test\"",
    "lint": "concurrently -n \"client,server\" -c \"green.bold,yellow.bold\" \"npm run lint:client\" \"npm run lint:server\"",
    "lint:client": "ng lint",
    "lint:html": "htmlhint \"client/**/*.html\"",
    "lint:scss": "sass-lint \"client/**/*.scss\" -v",
    "lint:server": "tslint --project server/tsconfig.json --config tslint.json server/**/**.ts{,x} && echo-cli 'All lint rules checked with success'",
    "e2e:start": "ng e2e"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "~7.2.0",
    "@angular/common": "~7.2.0",
    "@angular/compiler": "~7.2.0",
    "@angular/core": "~7.2.0",
    "@angular/forms": "~7.2.0",
    "@angular/http": "~7.2.0",
    "@angular/platform-browser": "~7.2.0",
    "@angular/platform-browser-dynamic": "~7.2.0",
    "@angular/router": "~7.2.0",
    "@auth0/angular-jwt": "^2.1.0",
    "bcryptjs": "^2.4.3",
    "bootstrap": "^4.2.1",
    "core-js": "^2.5.4",
    "dotenv": "^6.2.0",
    "express": "^4.16.4",
    "font-awesome": "^4.7.0",
    "jquery": "^3.3.1",
    "jsonwebtoken": "^8.4.0",
    "mongoose": "^5.4.3",
    "morgan": "^1.9.1",
    "popper.js": "^1.14.6",
    "rxjs": "~6.3.3",
    "tether": "^1.4.5",
    "tslib": "^1.9.0",
    "zone.js": "~0.8.26"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "~0.12.0",
    "@angular/cli": "~7.2.1",
    "@angular/compiler-cli": "~7.2.0",
    "@angular/language-service": "~7.2.0",
    "@types/chai-http": "^3.0.5",
    "@types/express": "^4.16.0",
    "@types/jasmine": "~2.8.14",
    "@types/jasminewd2": "~2.0.6",
    "@types/node": "~8.9.4",
    "chai": "^4.2.0",
    "chai-http": "^4.2.1",
    "codelyzer": "~4.5.0",
    "concurrently": "^4.1.0",
    "htmlhint": "^0.10.1",
    "jasmine-core": "~2.99.1",
    "jasmine-spec-reporter": "~4.2.1",
    "karma": "~3.1.1",
    "karma-chrome-launcher": "~2.2.0",
    "karma-coverage-istanbul-reporter": "~2.0.1",
    "karma-jasmine": "~1.1.2",
    "karma-jasmine-html-reporter": "^0.2.2",
    "mocha": "^5.2.0",
    "nodemon": "^1.18.9",
    "protractor": "~5.4.2",
    "rimraf": "^2.6.3",
    "sass-lint": "^1.12.1",
    "ts-node": "~7.0.0",
    "tslint": "~5.11.0",
    "typescript": "~3.2.2"
  }
}
