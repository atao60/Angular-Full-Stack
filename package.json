{
  "name": "mean-full-stack",
  "version": "7.2.1",
  "license": "MIT",
  "author": "Davide Violante",
  "description": "MEAN Full Stack project built using Angular 2+, Express, Mongoose and Node.",
  "engines": {
    "node": "8.11.1",
    "npm": "6.4.0"
  },
  "scripts": {
    "ng": "ng",
    "build": "ng build --prod",
    "start": "node dist/server/app.js",
    "mongo:clear": "rimraf .private/data/db/*",
    "mongo:start": "mongod --dbpath='.private/data/db' --port=3001",
    "client:start": "ng serve --proxy-config proxy.conf.json --open",
    "server:build": "tsc -p server",
    "server:build:watch": "tsc -w -p server",
    "server:start:dev": "nodemon dist/server/app.js",
    "predev": "npm run server:build",
    "dev": "concurrently -n \"mongo,proxy,server-build,server\" -c \"yellow.bold,blue.bold,red.bold,green.bold\" \"npm run mongo:start\" \"npm run client:start\" \"npm run server:build:watch\" \"npm run server:start:dev\"",
    "client:build:prod": "ng build --aot --prod",
    "preserver:start:prod": "npm run client:build:prod",
    "server:start:prod": "npm run server:build && node dist/server/app.js",
    "stage": "concurrently -n \"mongo,server\" -c \"yellow.bold,green.bold\" \"npm run mongo:start\" \"npm run server:start:prod\"",
    "test": "ng test",
    "testbe": "tsc -p server && mocha dist/server/test --exit",
    "lint": "ng lint",
    "linthtml": "htmlhint \"client/**/*.html\"",
    "lintscss": "sass-lint \"client/**/*.scss\" -v",
    "lintbe": "tslint server/**/**.ts{,x}",
    "e2e": "ng e2e"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "~7.2.0",
    "@angular/common": "~7.2.0",
    "@angular/compiler": "~7.2.0",
    "@angular/core": "~7.2.0",
    "@angular/forms": "~7.2.0",
    "@angular/http": "~7.2.0",
    "@angular/platform-browser": "~7.2.0",
    "@angular/platform-browser-dynamic": "~7.2.0",
    "@angular/router": "~7.2.0",
    "@auth0/angular-jwt": "^2.1.0",
    "bcryptjs": "^2.4.3",
    "bootstrap": "^4.2.1",
    "core-js": "^2.5.4",
    "dotenv": "^6.2.0",
    "express": "^4.16.4",
    "font-awesome": "^4.7.0",
    "jquery": "^3.3.1",
    "jsonwebtoken": "^8.4.0",
    "mongoose": "^5.4.3",
    "morgan": "^1.9.1",
    "popper.js": "^1.14.6",
    "rxjs": "~6.3.3",
    "rxjs-compat": "~6.3.3",
    "tslib": "^1.9.0",
    "tether": "^1.4.5",
    "zone.js": "~0.8.26"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "~0.12.0",
    "@angular/cli": "~7.2.1",
    "@angular/compiler-cli": "~7.2.0",
    "@angular/language-service": "~7.2.0",
    "@types/chai-http": "^3.0.5",
    "@types/express": "^4.16.0",
    "@types/jasmine": "~2.8.14",
    "@types/jasminewd2": "~2.0.6",
    "@types/node": "~8.9.4",
    "chai": "^4.2.0",
    "chai-http": "^4.2.1",
    "codelyzer": "~4.5.0",
    "concurrently": "^4.1.0",
    "htmlhint": "^0.10.1",
    "jasmine-core": "~2.99.1",
    "jasmine-spec-reporter": "~4.2.1",
    "karma": "~3.1.1",
    "karma-chrome-launcher": "~2.2.0",
    "karma-coverage-istanbul-reporter": "~2.0.1",
    "karma-jasmine": "~1.1.2",
    "karma-jasmine-html-reporter": "^0.2.2",
    "mocha": "^5.2.0",
    "nodemon": "^1.18.9",
    "protractor": "~5.4.2",
    "rimraf": "^2.6.3",
    "sass-lint": "^1.12.1",
    "ts-node": "~7.0.0",
    "tslint": "~5.11.0",
    "typescript": "~3.2.2"
  }
}
